@page
@model SagaOfKirAndLer.Pages.Registration.RegistrationPageModel
@{
    ViewData["Title"] = "Сага О Кирюндель и Лерундель";
    ViewData["ErrorMessage"] =Model._error;
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
       

        <div class="form-group">
            <label >Логин</label>
            <input asp-for="player.Login"  class="form-control" />
            
        </div>

        <div class="form-group">
            <label >Пароль</label>
            <input asp-for="player.Password"  class="form-control" type="password" />
           
        </div>

        <div class="form-group mt-2">
            <button  type="submit" asp-page-handler="Save" class="btn btn-primary">Регистрация</button>
            <button type="submit" asp-page-handler="Entrance" class="btn btn-secondary">Войти</button>
            <button type="submit" asp-page-handler="Delete" class="btn btn-secondary">Удалить</button>
        </div>
        <p>@ViewData["ErrorMessage"]</p>
    </div>
</form>
